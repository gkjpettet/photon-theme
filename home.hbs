{{!< default}}

<main id="gh-main" class="gh-main">
    {{#foreach posts limit="10"}}
        <article class="gh-article {{post_class}}">
            {{> content}}
            {{#if @last}}
                {{! Ignore }}
            {{else}}
                {{! Spacer after each post except the last one }}
                <div class="homepage-post-separator">&bull;</div>
            {{/if}}
        </article>
    {{/foreach}}
</main>